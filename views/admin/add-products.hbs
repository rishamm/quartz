                <h2 class="text-center">Add Product</h2>
            <form action="/admin/add-products" enctype="multipart/form-data" method="post"  >
                  <div class="form-row">
                     <div class="form-group col-md-6">
                        <label for="inputEmail4">Sku</label>
                        <input type="text" class="form-control"  name="sku" placeholder="SKU" required>
                     </div>
                      <div class="form-group col-md-6">
                        <label for="inputEmail4">Name</label>
                        <input type="text" class="form-control"  name="productname" placeholder="Product Name" required>
                     </div>
                     <div class="form-group col-md-6">
                        <label for="inputPassword4">Price</label>
                        <input type="text" class="form-control"  name="price" placeholder="Price" required>
                     </div>
                      <div class="form-group col-md-6">
                        <label for="inputPassword4">QTY</label>
                        <input type="text" class="form-control"  name="stock" placeholder="Qty" required>
                     </div>
                      <div class="form-group col-md-6">
                        <label for="inputPassword4">Color</label>
                        <input type="text" class="form-control"  name="color" placeholder="Color" required>
                     </div>
                       <div class="form-group col-md-6">
                        <label for="inputPassword4">Strap material</label>
                        <input type="text" class="form-control"  name="strap" placeholder="Strap matetial" required>
                     </div>
                  </div>
                  <div class="form-row">
                     <div class="form-group col-md-6">
                        <label for="city">Choose a Category :</label>
                                <div class="form-select">
                                    <select name="category" id="category">
                                         {{#each data.category}}
                                       <option value="{{this.category}}">{{this.category}}</option>
                                         {{/each}}
                                        
                                    </select>
                                    
                                </div>
                     </div>
    
                 
                     <div class="form-group col-md-6">
                        <label for="inputPassword4">Brand</label>
                        <input type="text" class="form-control"  name="brand" placeholder="Brand">
                     </div>
                  </div>   
  
                   <div class="row">
                      
                       <div class="col-md-6">
                        <label for="inputEmail4">Discription</label><br>
                         <textarea name="discription" rows="4" cols="50"></textarea>
                       </div>
                   </div>
                
                  <div class="row mt-5">
                     <div class="col-sm-3 imgUp">
                        <div class="imagePreview"></div>
                     <label class="btn btn-primary">
							Upload<input type="file" class="uploadFile img" value="Upload Photo" name="multi-files" accept='image/*' style="width: 0px;height: 0px;overflow: hidden;">
				      </label>
                  </div><!-- col-2 -->
                  <i class="fa fa-plus imgAdd"></i>
                  {{!-- <input type="file" name="multi-files" accept='image/*' multiple> --}}
                  </div><!-- row -->
                  <button class="btn btn-success" type="submit">Submit Form</button>
                  
                  </form>
